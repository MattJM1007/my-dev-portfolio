---
import Image from "astro/components/Image.astro";
import lyndhurst from "../assets/images/projects/screenshot-lyndhurst.webp";
import jacksonHeights from "../assets/images/projects/screenshot-jackson-heights.webp";

const { link, imageSrc, title } = Astro.props;
---

<a class="project-card" href={link} target="_blank" rel="noopener noreferrer">
  <Image src={imageSrc} alt="Link to lyndhurst meditation website" />

  <span class="title flex-flow fw-bold">
    {title}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      height="24px"
      viewBox="0 -960 960 960"
      width="24px"
      fill="#fafaf9"
      ><path
        d="M200-120q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h280v80H200v560h560v-280h80v280q0 33-23.5 56.5T760-120H200Zm188-212-56-56 372-372H560v-80h280v280h-80v-144L388-332Z"
      ></path>
    </svg>
  </span>
</a>

<style>
  .project-card {
    flex: 1;
    max-width: fit-content;
    min-width: 12.5rem;
    display: grid;
    grid-template-areas: "stack";
    align-items: end;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 3px 4px hsl(0 0% 0% / 0.5);
    transition:
      transform 300ms ease-in,
      filter 300ms ease;
  }

  .project-card > * {
    grid-area: stack;
  }

  .project-card .title {
    --gap: 1rem;

    color: var(--clr-neutral-100);
    background: var(--clr-primary-400);
    padding: 1.5rem;
    transition: transform 300ms ease-in;

    @media (width > 48em) {
      transform: translateY(100%);
    }
  }

  .project-card:is(:hover, :focus-visible) {
    transform: scale(1.05);
  }

  .project-card:is(:hover, :focus-visible) .title {
    transform: translateY(0%);
  }
</style>
