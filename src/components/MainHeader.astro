<style>
  header {
    background: var(--clr-primary-900);
    position: fixed;
    z-index: 999px;
    width: 100%;
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    color: var(--clr-neutral-100);
    padding-block: 0.25rem;
  }

  .primary-nav {
    --menu-direction: row;
    --menu-margin-left: auto;
    --menu-align-items: center;
    --menu-item-gap: 1.75rem;
    flex: 1;

    @media (width < 40em) {
      display: none;
      height: 0;
      /* transition: height 300ms allow-discrete; */
    }
  }

  .primary-nav__inner {
    display: flex;
    flex-direction: var(--menu-direction);
    gap: var(--menu-item-gap);
    align-items: var(--menu-align-items);
    flex-wrap: wrap;

    @media (width > 40em) {
      gap: 2.25rem;
    }
  }

  .primary-nav__inner :first-child,
  .primary-nav__inner :last-child {
    margin-inline-start: var(--menu-margin-left);
  }

  ul {
    margin: 0;
  }

  li {
    width: 100%;
  }

  a {
    padding: 1rem;
    display: block;
    width: 100%;
  }

  a:has(svg) {
    display: flex;
  }

  a:is(:hover, :focus-visible) {
    background: var(--clr-accent-1);
    color: var(--clr-primary-900);
    transition:
      background 500ms ease,
      color 300ms ease;

    & svg {
      fill: var(--clr-neutral-900);
    }
  }

  /* mobile menu styles */
  .mobile-menu {
    background: transparent;
    border: 0;
    border-radius: 0.25rem;
    padding: 0.25rem;
    cursor: pointer;
  }

  .mobile-menu .line {
    transition:
      y 300ms ease-in 300ms,
      rotate 300ms ease-in,
      opacity 0ms 300ms;
    transform-origin: center;
  }

  .mobile-menu[aria-expanded="true"] .line {
    transition:
      y 300ms ease-in,
      rotate 300ms ease-in 300ms,
      opacity 0ms 300ms;
  }

  .mobile-menu[aria-expanded="true"] :is(.top, .bottom) {
    y: 45;
  }

  .mobile-menu[aria-expanded="true"] .top {
    rotate: 45deg;
  }

  .mobile-menu[aria-expanded="true"] .middle {
    opacity: 0;
  }

  .mobile-menu[aria-expanded="true"] .bottom {
    rotate: -45deg;
  }

  .expanded {
    --menu-direction: column;
    --menu-margin-left: 0;
    --menu-align-items: start;
    --menu-item-gap: 0rem;

    display: block;
    position: absolute;
    flex-direction: column;
    top: 100%;
    right: 2rem;
    height: auto;
    background: var(--clr-primary-900);
    box-shadow: 0 0px 5px var(--clr-neutral-600);
  }
</style>

<script>
  const mobileMneuBtn = document.querySelector(".mobile-menu");
  const nav = document.querySelector(".primary-nav");

  mobileMneuBtn.addEventListener("click", () => {
    const isExpanded = mobileMneuBtn.getAttribute("aria-expanded") === "true";

    if (!isExpanded) {
      nav.classList.add("expanded");
      mobileMneuBtn.setAttribute("aria-expanded", "true");
    } else {
      nav.classList.remove("expanded");
      mobileMneuBtn.setAttribute("aria-expanded", "false");
    }
  });
</script>
